  script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
  script(src="//cdn.rawgit.com/schr3j/pr0gramm-updates/33b082e789fdb0a6a391cb7d54e24539b3c45202/update.js")
  script.
    $('.top').css('min-height', $(window).height() - 50);
    $('.header').toggleClass('fixed', $(window).scrollTop() > 0);
    
    getUpdateJson(function(json) {
      var versionString = json.versionStr || ("1." + json.version);
      $(".version").html(versionString);
      $(".btn-open-download").attr("href", json.apk);
    });
    
    $(window).resize(function() {
      $('.top').css('min-height', $(window).height() - 50);
    });
    
    $(window).scroll(function() {
      $('.header').toggleClass('fixed', $(window).scrollTop() > 0);
    });
    
    var $root = $('html, body');
    $('a').click(function() {
      $root.animate({
          scrollTop: $('[name="' + $.attr(this, 'href').substr(1) + '"]').offset().top
        }, 500);
      return false;
    });
