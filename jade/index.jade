  body
    header.header
      img.logo(src="img/logo.png" alt="Logo")
      .vcenter-content
        span.title pr0gramm navigator
      div(style="flex-grow: 1;")
      .download-buttons.vcenter-content
        .div
          a.btn.btn-lg.btn-pro(href="#download") Herunterladen
    main.main.container-fluid
      +section('top')
          .vcenter-content.hcenter-content
            .phone
              .screen
                video(autoplay muted loop poster="img/pr0-poster.jpg")
                  source(src="img/pr0.webm" type="video/webm")
                  source(src="img/pr0.mp4" type="video/mp4")
          .vcenter-content
            div
              .download-buttons
                center
                  p Jetzt und NUR fÃ¼r Android!
                  p
                    a.btn.btn-lg.btn-pro(href="#download") Herunterladen
                  .minor
                    | version 
                    span.version 1.77.2
      +section('top-continue')
        a(href="#continue")
          i.fa.fa-chevron-down
      +section()
        a.anker(name='continue')
        include ./sections/section1.jade
      +section()
        include ./sections/section2.jade
      +section()
        include ./sections/section3.jade
      +section()
        include ./sections/opensource_aktuell.jade
      +section('download')
        a.anker(name='download')
        include ./sections/download.jade
