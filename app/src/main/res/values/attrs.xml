<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppTheme">
        <attr name="loginBackground" format="reference"/>
        <attr name="roundedCornerBackground" format="reference"/>
        <attr name="drawerTheme" format="reference"/>
        <attr name="appIcon" format="reference"/>
        <attr name="searchTheme" format="reference"/>
        <attr name="dropshadowPrimaryDark" format="reference"/>

        <attr name="secondaryBackground" format="color"/>
    </declare-styleable>

    <declare-styleable name="VoteView">
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>

        <attr name="spacing" format="dimension"/>
        <attr name="markedColor" format="color|reference"/>
        <attr name="markedColorDown" format="color|reference"/>
        <attr name="defaultColor" format="color|reference"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="IconView">
        <attr name="iv_textSize" format="dimension"/>
        <attr name="iv_textColor" format="color"/>
        <attr name="iv_text" format="string"/>
    </declare-styleable>

    <declare-styleable name="BubbleView">
        <attr name="bv_gravity" format="enum">
            <enum name="top" value="48"/>
            <enum name="bottom" value="80"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>

        <attr name="bv_bubbleColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="CommentSpacerView">
        <attr name="lineMargin" format="dimension"/>
        <attr name="lineWidth" format="dimension"/>
        <attr name="lineColor" format="color"/>
        <attr name="depth" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ScoreUnknownView">
        <attr name="radius" format="dimension"/>
        <attr name="fillColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="AspectView">
        <attr name="aspect" format="float"/>
    </declare-styleable>

    <declare-styleable name="MessageView">
        <attr name="viewLayout" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MaxWidthFrameLayout">
        <attr name="mwfl_maxWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleChartView">
        <attr name="chartType" format="string"/>
        <attr name="lineTop" format="string"/>
        <attr name="lineBottom" format="string"/>
    </declare-styleable>
</resources>
