<resources>
    <!-- root of all our themes! -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:textColorLink">@color/blue_grey_500</item>
        <item name="android:windowBackground">@color/feed_background</item>
        <item name="buttonStyle">@style/Button</item>
    </style>

    <style name="AppTheme.Orange">
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryDark">@color/orange_primary_dark</item>
        <item name="colorAccent">@color/orange_accent</item>
        <item name="loginBackground">@drawable/login_background_orange</item>
        <item name="roundedCornerBackground">@drawable/rounded_corner_background_orange</item>
        <item name="drawerTheme">@style/DrawerTheme.Orange</item>
        <item name="popupTheme">@style/AppTheme.Popup.Orange</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Orange</item>
        <item name="appIcon">@drawable/ic_app_orange</item>
        <item name="videoProgressDrawable">@drawable/video_progress_orange</item>
    </style>

    <style name="AppTheme.Green">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/green_primary_dark</item>
        <item name="colorAccent">@color/green_accent</item>
        <item name="loginBackground">@drawable/login_background_green</item>
        <item name="roundedCornerBackground">@drawable/rounded_corner_background_green</item>
        <item name="drawerTheme">@style/DrawerTheme.Green</item>
        <item name="popupTheme">@style/AppTheme.Popup.Green</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Green</item>
        <item name="appIcon">@drawable/ic_app_green</item>
        <item name="videoProgressDrawable">@drawable/video_progress_green</item>
    </style>

    <style name="AppTheme.Olive">
        <item name="colorPrimary">@color/olive_primary</item>
        <item name="colorPrimaryDark">@color/olive_primary_dark</item>
        <item name="colorAccent">@color/olive_accent</item>
        <item name="loginBackground">@drawable/login_background_olive</item>
        <item name="roundedCornerBackground">@drawable/rounded_corner_background_olive</item>
        <item name="drawerTheme">@style/DrawerTheme.Olive</item>
        <item name="popupTheme">@style/AppTheme.Popup.Olive</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Olive</item>
        <item name="appIcon">@drawable/ic_app_olive</item>
        <item name="videoProgressDrawable">@drawable/video_progress_olive</item>
    </style>

    <style name="AppTheme.Pink">
        <item name="colorPrimary">@color/pink_primary</item>
        <item name="colorPrimaryDark">@color/pink_primary_dark</item>
        <item name="colorAccent">@color/pink_accent</item>
        <item name="loginBackground">@drawable/login_background_pink</item>
        <item name="roundedCornerBackground">@drawable/rounded_corner_background_pink</item>
        <item name="drawerTheme">@style/DrawerTheme.Pink</item>
        <item name="popupTheme">@style/AppTheme.Popup.Pink</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Pink</item>
        <item name="appIcon">@drawable/ic_app_pink</item>
        <item name="videoProgressDrawable">@drawable/video_progress_pink</item>
    </style>

    <style name="AppTheme.Blue">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary_dark</item>
        <item name="colorAccent">@color/blue_accent</item>
        <item name="loginBackground">@drawable/login_background_blue</item>
        <item name="roundedCornerBackground">@drawable/rounded_corner_background_blue</item>
        <item name="drawerTheme">@style/DrawerTheme.Blue</item>
        <item name="popupTheme">@style/AppTheme.Popup.Blue</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Blue</item>
        <item name="appIcon">@drawable/ic_app_blue</item>
        <item name="videoProgressDrawable">@drawable/video_progress_blue</item>
    </style>

    <!-- Now do the same for popup menus -->
    <style name="AppTheme.Popup" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Popup.Orange">
        <item name="colorAccent">@color/orange_primary</item>
    </style>

    <style name="AppTheme.Popup.Green">
        <item name="colorAccent">@color/green_primary</item>
    </style>

    <style name="AppTheme.Popup.Olive">
        <item name="colorAccent">@color/olive_primary</item>
    </style>

    <style name="AppTheme.Popup.Pink">
        <item name="colorAccent">@color/pink_primary</item>
    </style>

    <style name="AppTheme.Popup.Blue">
        <item name="colorAccent">@color/blue_primary</item>
    </style>

    <!-- And for everything based on alert dialogs -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert"/>
    <style name="AppTheme.Dialog.Orange">
        <item name="colorAccent">@color/orange_primary</item>
    </style>

    <style name="AppTheme.Dialog.Green">
        <item name="colorAccent">@color/green_primary</item>
    </style>

    <style name="AppTheme.Dialog.Olive">
        <item name="colorAccent">@color/olive_primary</item>
    </style>

    <style name="AppTheme.Dialog.Pink">
        <item name="colorAccent">@color/pink_primary</item>
    </style>

    <style name="AppTheme.Dialog.Blue">
        <item name="colorAccent">@color/blue_primary</item>
    </style>

    <!-- now specialize by overriding specific flags. -->
    <style name="AppTheme.Orange.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Green.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Olive.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Pink.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Blue.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- This one is used in the login page -->
    <style name="AppTheme.Orange.NoActionBar.WhiteAccent">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppTheme.Green.NoActionBar.WhiteAccent">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppTheme.Olive.NoActionBar.WhiteAccent">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppTheme.Pink.NoActionBar.WhiteAccent">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppTheme.Blue.NoActionBar.WhiteAccent">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <!-- Just placeholder for newer versions of androids -->
    <style name="AppTheme.Orange.NoActionBar.Fullscreen"/>
    <style name="AppTheme.Green.NoActionBar.Fullscreen"/>
    <style name="AppTheme.Olive.NoActionBar.Fullscreen"/>
    <style name="AppTheme.Pink.NoActionBar.Fullscreen"/>
    <style name="AppTheme.Blue.NoActionBar.Fullscreen"/>

    <style name="AppTheme.Orange.NoActionBar.TranslucentStatus"/>
    <style name="AppTheme.Green.NoActionBar.TranslucentStatus"/>
    <style name="AppTheme.Olive.NoActionBar.TranslucentStatus"/>
    <style name="AppTheme.Pink.NoActionBar.TranslucentStatus"/>
    <style name="AppTheme.Blue.NoActionBar.TranslucentStatus"/>

    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button</item>
    </style>


    <!-- ###### This is for the drawer ###### -->
    <style name="DrawerTheme.Orange" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/orange_primary</item>
    </style>

    <style name="DrawerTheme.Green" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/green_primary</item>
    </style>

    <style name="DrawerTheme.Olive" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/olive_primary</item>
    </style>

    <style name="DrawerTheme.Pink" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/pink_primary</item>
    </style>

    <style name="DrawerTheme.Blue" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/blue_primary</item>
    </style>

    <!-- This is all color independent! -->
    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/white</item>
    </style>


    <!-- For the intro activity -->
    <style name="AppTheme.Intro">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Intro.TranslucentStatus"/>

    <style name="DrawerItem" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="OpBadge" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/roundedCornerBackground</item>
        <item name="android:text">@string/badge_op</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="UserInfo_Kpi_Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="UserInfo_Kpi_Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="UserInfo_KpiContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>
