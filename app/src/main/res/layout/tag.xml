<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/tag_height"
    android:background="@drawable/tag_background"
    android:paddingEnd="6sp">

    <TextView
        android:id="@+id/tag_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tag_height"
        android:layout_gravity="start"
        android:layout_marginEnd="@dimen/tags_tagVoteViewWidth"
        android:background="?selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="8sp"
        android:paddingEnd="2sp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        tools:text="Kreiselficker" />

    <com.pr0gramm.app.ui.views.VoteView
        android:id="@+id/tag_vote"
        android:layout_width="@dimen/tags_tagVoteViewWidth"
        android:layout_height="@dimen/tag_height"
        android:layout_gravity="end"
        app:defaultColor="@color/grey_700"
        app:markedColor="?colorAccent"
        app:orientation="horizontal"
        app:spacing="0sp"
        app:textSize="24sp" />

</FrameLayout>