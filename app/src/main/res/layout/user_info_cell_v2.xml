<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/user_cell_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_800"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp">


        <com.pr0gramm.app.ui.views.UsernameView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="24sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="4sp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/upper_benis"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/kpi_benis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:text="14854"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/actions_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/action_new_message"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_marginRight="4dp"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_email"
            android:tint="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/user_extra_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        tools:text="Seit: 3 Jahre"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/UserInfo_KpiContainer">

            <TextView
                style="@style/UserInfo_Kpi_Header"
                android:text="@string/kpi_desc_uploads"/>

            <TextView
                android:id="@+id/kpi_uploads"
                style="@style/UserInfo_Kpi_Value"
                tools:text="56"/>
        </LinearLayout>

        <LinearLayout
            style="@style/UserInfo_KpiContainer">

            <TextView
                style="@style/UserInfo_Kpi_Header"
                android:text="@string/kpi_desc_favorites"/>

            <TextView
                android:id="@+id/kpi_favorites"
                style="@style/UserInfo_Kpi_Value"
                tools:text="96"/>
        </LinearLayout>

        <LinearLayout
            style="@style/UserInfo_KpiContainer">

            <TextView
                style="@style/UserInfo_Kpi_Header"
                android:text="@string/kpi_desc_comments"/>

            <TextView
                android:id="@+id/kpi_comments"
                style="@style/UserInfo_Kpi_Value"
                tools:text="85"/>

        </LinearLayout>

        <LinearLayout
            style="@style/UserInfo_KpiContainer">

            <TextView
                style="@style/UserInfo_Kpi_Header"
                android:text="@string/kpi_desc_tags"/>

            <TextView
                android:id="@+id/kpi_tags"
                style="@style/UserInfo_Kpi_Value"
                tools:text="1827"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>