<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.pr0gramm.app.ui.views.MaximizeImageView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="96dp"/>

        <com.pr0gramm.app.ui.views.BusyIndicator
            android:id="@+id/busy_indicator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignLeft="@id/preview"
            android:layout_alignRight="@id/preview"
            android:layout_alignTop="@id/preview"
            android:layout_alignBottom="@id/preview"
            android:visibility="gone"/>

        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_below="@id/preview"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/primary"
            android:text="@string/action_upload"/>
    </RelativeLayout>
</ScrollView>