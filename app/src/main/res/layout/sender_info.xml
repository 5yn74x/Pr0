<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       tools:showIn="@layout/comment_common">

    <LinearLayout
        android:id="@+id/username_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:layout_gravity="bottom">

        <TextView
            style="@style/AppStyle.OpBadge"
            android:id="@+id/badge_op"
            android:layout_marginRight="4dp"
            />

        <com.pr0gramm.app.ui.views.UsernameView
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="10sp"
            android:text="@string/dummy_points"/>

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="@string/dummy_post_date"/>

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/primary"
            android:singleLine="true"
            android:text="@string/action_answer"/>

    </LinearLayout>
</merge>