<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="72dp"
             android:background="?selectableItemBackground"
             tools:showIn="@layout/fragment_conversations">

    <ImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginLeft="16dp"
        tools:background="@color/blue_primary"
        android:layout_marginStart="16dp"/>

    <com.pr0gramm.app.ui.views.UsernameView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginEnd="56dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="56dp"
        android:layout_marginStart="72dp"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:firstBaselineToTopHeight="32dp"
        tools:text="Mopsalarm" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginEnd="56dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="56dp"
        android:layout_marginStart="72dp"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:firstBaselineToTopHeight="52dp"
        tools:text="vor 4 Stunden"/>

    <TextView
        android:id="@+id/unread_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="?roundedCornerBackground"
        android:gravity="center"
        android:maxLines="1"
        tools:text="12"/>

</FrameLayout>