<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="prefcat_feed_types"
        android:title="@string/pref_feed_types">

        <CheckBoxPreference
            android:key="pref_feed_type_sfw"
            android:title="@string/type_sfw"
            android:summaryOn="@string/pref_feed_type_sfw_on"
            android:summaryOff="@string/pref_feed_type_sfw_off"
            android:defaultValue="true"/>

        <CheckBoxPreference
            android:key="pref_feed_type_nsfw"
            android:title="@string/type_nsfw"
            android:summaryOn="@string/pref_feed_type_nsfw_on"
            android:summaryOff="@string/pref_feed_type_nsfw_off"
            android:defaultValue="false"/>

        <CheckBoxPreference
            android:key="pref_feed_type_nsfl"
            android:title="@string/type_nsfl"
            android:summaryOn="@string/pref_feed_type_nsfl_on"
            android:summaryOff="@string/pref_feed_type_nsfl_off"
            android:defaultValue="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="prefcat_style"
        android:title="@string/prefcat_style">

        <CheckBoxPreference
            android:key="pref_double_tap_to_upvote"
            android:title="@string/pref_double_tap_to_upvote"
            android:summary="@string/pref_double_tap_to_upvote_summary"
            android:defaultValue="true"/>

        <ListPreference
            android:key="pref_seen_indicator_style"
            android:title="@string/pref_seen_indicator_style"
            android:entries="@array/pref_seen_indicator_style_human"
            android:entryValues="@array/pref_seen_indicator_style_values"
            android:defaultValue="@string/pref_seen_indicator_style_default"
            android:summary="@string/pref_seen_indicator_style_summary"/>

        <CheckBoxPreference
            android:key="pref_benis_graph_enabled"
            android:title="@string/pref_benis_graph_enabled"
            android:summary="@string/pref_benis_graph_enabled_summary"
            android:defaultValue="true"/>

        <CheckBoxPreference
            android:key="pref_animate_vote_view"
            android:title="@string/pref_animate_vote_view"
            android:summaryOn="@string/pref_animate_vote_view_on"
            android:summaryOff="@string/pref_animate_vote_view_off"
            android:defaultValue="true"/>

        <CheckBoxPreference
            android:key="pref_comment_view_vote_buttons_small"
            android:title="@string/pref_comment_view_vote_buttons_small"
            android:summary="@string/pref_comment_view_vote_buttons_small_summary"
            android:defaultValue="false"/>

        <CheckBoxPreference
            android:key="pref_fullscreen_zoom_view"
            android:title="@string/pref_fullscreen_zoom_view"
            android:summary="@string/pref_fullscreen_zoom_view_summary"
            android:defaultValue="true"/>

        <CheckBoxPreference
            android:key="pref_show_pin_button"
            android:title="@string/pref_show_pin_button"
            android:summary="@string/pref_show_pin_button_summary"
            android:defaultValue="true"/>

        <CheckBoxPreference
                android:key="pref_show_refresh_button"
                android:title="@string/pref_show_refresh_button"
                android:summary="@string/pref_show_refresh_button_summary"
                android:defaultValue="true"/>

        <CheckBoxPreference
            android:key="pref_show_notifications"
            android:title="@string/pref_show_notifications"
            android:summary="@string/pref_show_notifications_summary"
            android:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="prefcat_compatibility"
        android:title="@string/pref_compatibility">

        <ListPreference
            android:key="pref_max_image_size"
            android:title="@string/pref_max_image_size"
            android:entries="@array/pref_max_image_size_human"
            android:entryValues="@array/pref_max_image_size_values"
            android:defaultValue="@string/pref_max_image_size_default"
            android:summary="@string/pref_max_image_size_summary"/>

        <CheckBoxPreference
            android:key="pref_convert_gif_to_webm"
            android:title="@string/pref_convert_gif_to_webm"
            android:summaryOn="@string/pref_convert_gif_to_webm_on"
            android:summaryOff="@string/pref_convert_gif_to_webm_off"
            android:defaultValue="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="prefcat_privacy"
        android:title="@string/pref_privacy">

        <CheckBoxPreference
            android:key="pref_check_for_updates"
            android:title="@string/pref_check_for_updates"
            android:summaryOn="@string/pref_check_for_updates_on"
            android:summaryOff="@string/pref_check_for_updates_off"
            android:defaultValue="true"/>

        <CheckBoxPreference
            android:key="pref_crashlytics_enabled"
            android:title="@string/pref_crashlytics_enabled"
            android:summaryOn="@string/pref_crashlytics_enabled_on"
            android:summaryOff="@string/pref_crashlytics_enabled_off"
            android:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="prefcat_misc"
        android:title="Miscellaneous">

        <Preference
            android:key="pref_pseudo_feedback"
            android:title="@string/pref_pseudo_feedback"
            android:summary="@string/pref_pseudo_feedback_summary"/>

        <Preference
            android:key="pref_pseudo_changelog"
            android:title="@string/pref_pseudo_changelog"
            android:summary="@string/pref_pseudo_changelog_summary"/>

        <Preference
            android:key="pref_pseudo_update"
            android:title="@string/pref_pseudo_update"
            android:summary="@string/pref_pseudo_update_summary"/>

        <CheckBoxPreference
            android:key="pref_use_beta_channel"
            android:title="@string/pref_use_beta_channel"
            android:summary="@string/pref_use_beta_channel_summary"
            android:defaultValue="false"/>

        <Preference
            android:key="pref_pseudo_logcat"
            android:title="@string/logcat"
            android:summary="@string/logcat_summary"/>
    </PreferenceCategory>
</PreferenceScreen>
