<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="1sp"
                android:left="1sp"
                android:right="1sp"
                android:top="1sp"/>
            <size
                android:width="@dimen/user_type_diamond_diameter"
                android:height="@dimen/user_type_diamond_diameter"/>

        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45">

            <shape android:shape="rectangle">
                <solid android:color="@color/user_type_legende"/>
            </shape>
        </rotate>
    </item>
</layer-list>